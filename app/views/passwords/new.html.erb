<div class="card">
  <div class="box">
    <div id="clearance" class="password-reset">
      <h2><%= t(".title") %></h2>
          <hr class="mt-3 mb-2">
      <p><%= t(".description") %></p>

      <%= form_for :password, url: passwords_path, :html => {class:'form-group'} do |form| %>
        <div class="text-field">
          <%= form.label :email %>
          <%= form.text_field :email, type: 'email', class: "form-control" %>
        </div>
        </br>
        <div class="submit-field">
          <%= form.submit 'Reset password', :class => 'btn btn-primary'  %>
        </div>
      <% end %>
    </div>
  </div>
</div>


<style>

.card {
    top: 4vh; 
    margin: 0 auto;
    margin-bottom:30px;
    width:350px;
    min-height:200px;
    background:#fff;
    box-shadow: 0.2em 0.2em 0.8em 0.1em rgba(83, 83, 83, 0.3);
    border-radius:0.5em;
    transition:0.5s;
}

.box {
    margin: 20px;
}
</style>