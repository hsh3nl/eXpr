<div class="card">
  <div class="box">
    <%= form_with scope: :grocery, url: user_recipes_path(current_user), method: :post, local: true do |form| %>
      <h5 style="text-align:center;">Make a recipe with:</h5>
          <hr class="mt-3 mb-3">
      <% @valid_items.each do |valid_item| %>
        <tr align="left">
          <td><% check_box_tag "ingredients[]", valid_item.ingredient %></td>
          <td><%= check_box('recipe', 'ingredients', {:multiple => true}, valid_item.ingredient, nil) %></td>
          <td><%=valid_item.ingredient %></td>
          <br/>
        </tr>
      <% end %>
      <div id="btn"><br/><%=form.submit "Search Recipes", :class => 'btn btn-primary'%></div>
    <% end %>
  </div>
</div>

<style>
#btn {
  margin-left:3.6em;
}
td {
  text-align: left;
}
.card {
    top:13vh;
    margin: 0 auto;
    width:300px;
    min-height:250px;
    background:#fff;
    box-shadow: 0.2em 0.2em 0.8em 0.1em rgba(83, 83, 83, 0.3);
    border-radius:0.5em;
    transition:0.5s;
}
.box {
  margin:20px;
}

</style>