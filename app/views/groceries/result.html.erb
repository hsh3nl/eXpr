
<h3>Trending Recipies!</h3>
<p>Ingredient(s): <%=@ingredients%></p>
    <hr class="mt-3 mb-2">
<div class="card-deck">
  <% @recipes.each do |recipe| %>
    <div class="card">
      <div class="card-body">
        <%= recipe.title%>
        <img src="<%= recipe.image_url %>" width="100" height="100">
        <p><a href="<%= recipe.source_url%>" target="_blank">Check Out This Recipe!</a></p>
      </div>  
    </div>
  <% end %>
</div>

<style>
h3, p {
  text-align: center;
  margin-top: 30px;

}
.card {   
    top: 4vh;
    margin: 0 auto;
    margin-bottom: 30px;
    min-width:350px;
    max-width:351px;
    min-height:5px;
    background:#fff;
    box-shadow: 0.2em 0.2em 0.8em 0.1em rgba(83, 83, 83, 0.3);
    border-radius:0.5em;
    transition:0.5s;
}
.card-body {
  min-width: 300px;
}
.box {
    margin: 20px;
}
img {
    float:right;
}
</style>