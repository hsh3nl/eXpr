<link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">

<html>
<body>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

<div class="card-deck">

  <% if signed_in? %>
  <div class="card">
  <%= button_to "Add new entry?", new_user_grocery_path(current_user), method: :get,class:"btn btn-outline-primary btn-lg col-12 text-center" %>
  </div>
  <% end %>
<div class="card">
  <div class="box">
      <h3 style="text-align: center;">Welcome, <%= @user %>!</h3>
    <hr class="mt-3 mb-2">
      <p style="text-align: center;" id='date-p'><%=Time.now.strftime("%A, ")%><%=Date.today.to_formatted_s(:rfc822)%></p>
    <hr class="mt-0 mb-2">
      <p><i class="fas fa-cookie" style="font-size:22px"></i>&nbsp;&nbsp;All Groceries:<%= " #{@groceries.count}" %></p>
      <p><i class="fas fa-cookie-bite" style="font-size:22px"></i>&nbsp;&nbsp;Expiring Soon:<%= " #{@exps.count}" %></p>
      <p><i class="fas fa-skull-crossbones" style="font-size:22px"></i>&nbsp;&nbsp;&nbsp;Expired: <%= " #{@expired.count}" %></p>
  </div>
</div>
  <div class="card">
    <div class="box">
      <h4>Check your groceries?</h4>
      <div class="button"><%= button_to "All Groceries", user_groceries_path(current_user), type:"button", class:"btn btn-primary btn-block", method: :get %></div>
      <div class="button"><%= button_to "Expiring Soon", user_expiries_path(current_user), type:"button", class:"btn btn-warning btn-block", method: :get %></div>
      <div id="button1"><%= button_to "Expired", user_expired_path(current_user), type:"button", class:"btn btn-danger btn-block", method: :get %></div>
    </div>
  </div>
</div>
</body>
</html>


<style>


h4, h3 {
  text-align: center;
  font-family: 'Quicksand', sans-serif;
}
.button {
  margin-bottom:10px;
}
#button1 {
  margin:0;
}
.card {   
    top: 3vh;
    margin: 0 auto;
    width:350px;
    min-height:5px;
    background:#fff;
    box-shadow: 0.2em 0.2em 0.8em 0.1em rgba(83, 83, 83, 0.3);
    border-radius:0.5em;
    transition:0.5s;
}

.box {
    margin: 20px;
}
h5 {
  margin: 2px;
  color: white;
}

#date-p {
    font-family: 'Quicksand', sans-serif;
    font-style: italic;
    font-size: 1em;
}

#black {
  color:black;
}
</style>